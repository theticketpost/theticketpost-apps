{
    "name": "google-calendar",
    "description": "Print the appointments you have for the day in google calendar",
    "version": "0.0.1",
    "author": "eipporko",
    "render_component": true,
    "refresh_component": true,
    "inspector": true,
    "inspector_template": [
        {
            "type": "number",
            "label": "Days to show (including today)",
            "name": "days",
            "value": 1
        }
    ],
    "configuration_template": [
        {
            "type": "google-credentials",
            "label": "Google Credentials",
            "name": "google-credentials",
            "value": [],
            "scopes": ["https://www.googleapis.com/auth/calendar"]
        }
    ],
    "configuration": true
}
