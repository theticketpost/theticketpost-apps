{
    "name": "openweather",
    "description": "Shows the current temperature and forecast of your location. Powered by OpenWeather",
    "version": "0.0.1",
    "author": "eipporko",
    "render_component": true,
    "refresh_component": true,
    "inspector_template": [
        {
            "type": "text",
            "label": "Lat",
            "name": "lat",
            "value": "43.4439"
        },
        {
            "type": "text",
            "label": "Lon",
            "name": "lon",
            "value": "-8.3661"
        }
    ],
    "inspector": true,
    "configuration_template": [
        {
            "type": "text",
            "label": "APIKey",
            "name": "api_key",
            "value": ""
        },
        {
            "type": "select",
            "label": "Unit",
            "name": "unit",
            "value": "metric",
            "options": [
                {
                    "value": "metric",
                    "description": "metric"
                },
                {
                    "value": "imperial",
                    "description": "imperial"
                }
            ]
        }
    ],
    "configuration": true
}
